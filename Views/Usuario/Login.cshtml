@model BibliotecaWeb.Models.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="auth-container fade-in">
    <div class="auth-header">
        <i class="fas fa-sign-in-alt fa-2x mb-3"></i>
        <h2>Iniciar Sesión</h2>
        <p>Accede a tu cuenta para gestionar tus préstamos</p>
    </div>

    <div class="auth-body">
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="form-label">
                    <i class="fas fa-envelope me-2"></i>Correo Electrónico
                </label>
                <input asp-for="Email" class="form-control" placeholder="Ingrese su email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">
                    <i class="fas fa-lock me-2"></i>Contraseña
                </label>
                <div class="input-group">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Ingrese su contraseña" id="passwordInput" />
                    <button type="button" class="btn btn-outline-secondary" id="togglePassword">
                        <i class="fas fa-eye" id="toggleIcon"></i>
                    </button>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="RecordarMe" class="form-check-input" type="checkbox" />
                <label asp-for="RecordarMe" class="form-check-label">
                    Recordarme
                </label>
            </div>

            <button type="submit" class="btn btn-primary btn-block">
                <i class="fas fa-sign-in-alt me-2"></i>
                Iniciar Sesión
            </button>
        </form>

        <hr class="my-4">

        <div class="text-center">
            <p class="text-muted">¿No tienes una cuenta?</p>
            <a href="@Url.Action("Registro", "Usuario")" class="btn btn-outline-primary">
                <i class="fas fa-user-plus me-2"></i>
                Crear Cuenta Nueva
            </a>
        </div>

        <div class="mt-4 p-3 bg-light rounded">
            <h6 class="text-center mb-3">
                <i class="fas fa-info-circle me-2"></i>
                Cuentas de Prueba
            </h6>
            <div class="row text-center">
                <div class="col-md-6">
                    <small class="text-muted">
                        <strong>Administrador:</strong><br>
                        admin@biblioteca.com<br>
                        admin123
                    </small>
                </div>
                <div class="col-md-6">
                    <small class="text-muted">
                        <strong>Usuario:</strong><br>
                        juan@email.com<br>
                        juan123
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Toggle para mostrar/ocultar contraseña
            $('#togglePassword').click(function() {
                var passwordField = $('#passwordInput');
                var toggleIcon = $('#toggleIcon');

                if (passwordField.attr('type') === 'password') {
                    passwordField.attr('type', 'text');
                    toggleIcon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    passwordField.attr('type', 'password');
                    toggleIcon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });

            // Auto-completar con cuentas de prueba
            $('.bg-light .col-md-6').click(function() {
                var isAdmin = $(this).text().includes('Administrador');
                if (isAdmin) {
                    $('#Email').val('admin@biblioteca.com');
                    $('#Password').val('admin123');
                } else {
                    $('#Email').val('juan@email.com');
                    $('#Password').val('juan123');
                }
            });

            // Efecto de focus en los campos
            $('.form-control').focus(function() {
                $(this).closest('.form-group').addClass('focused');
            }).blur(function() {
                $(this).closest('.form-group').removeClass('focused');
            });
        });
    </script>

    <style>
        .form-group.focused label {
            color: var(--primary-color);
        }

        .form-group.focused .form-control {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(44, 90, 160, 0.25);
        }

        .bg-light .col-md-6:hover {
            background-color: rgba(44, 90, 160, 0.1);
            cursor: pointer;
            border-radius: 5px;
        }
    </style>
}