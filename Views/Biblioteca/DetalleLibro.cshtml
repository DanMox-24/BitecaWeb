@model BibliotecaWeb.Models.Libro

@{
    ViewData["Title"] = Model.Titulo;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <div class="card book-detail-image">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ImagenUrl))
                    {
                        <img src="@Model.ImagenUrl" alt="@Model.Titulo" class="img-fluid rounded" style="max-height: 400px;" />
                    }
                    else
                    {
                        <div class="book-placeholder">
                            <i class="fas fa-book fa-5x text-muted"></i>
                            <p class="mt-3 text-muted">Imagen no disponible</p>
                        </div>
                    }
                </div>
            </div>

            @if (Model.TipoLibro == "Fisico" && Model.CantidadDisponible > 0)
            {
                <div class="card mt-3">
                    <div class="card-body text-center">
                        @if (Context.Session.GetString("UsuarioId") != null)
                        {
                            <form asp-controller="Biblioteca" asp-action="SolicitarPrestamo" method="post">
                                <input type="hidden" name="libroId" value="@Model.Id" />
                                <button type="submit" class="btn btn-success btn-lg w-100">
                                    <i class="fas fa-hand-holding me-2"></i>
                                    Solicitar Préstamo
                                </button>
                            </form>
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "Usuario")" class="btn btn-primary btn-lg w-100">
                                <i class="fas fa-sign-in-alt me-2"></i>
                                Iniciar Sesión para Solicitar
                            </a>
                        }
                    </div>
                </div>
            }
        </div>

        <div class="col-md-8">
            <div class="book-detail-info">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <h1 class="book-detail-title">@Model.Titulo</h1>
                    <a href="javascript:history.back()" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Volver
                    </a>
                </div>

                <div class="book-detail-meta mb-4">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong><i class="fas fa-user me-2"></i>Autor:</strong> @Model.Autor</p>
                            @if (!string.IsNullOrEmpty(Model.ISBN))
                            {
                                <p><strong><i class="fas fa-barcode me-2"></i>ISBN:</strong> @Model.ISBN</p>
                            }
                            @if (Model.Categoria != null)
                            {
                                <p>
                                    <strong><i class="fas fa-tag me-2"></i>Categoría:</strong>
                                    <span class="badge bg-primary">@Model.Categoria.Nombre</span>
                                </p>
                            }
                        </div>
                        <div class="col-md-6">
                            <p>
                                <strong><i class="fas fa-layer-group me-2"></i>Tipo:</strong>
                                @if (Model.TipoLibro == "Virtual")
                                {
                                    <span class="badge bg-info">
                                        <i class="fas fa-tablet-alt me-1"></i>Virtual
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-book me-1"></i>Físico
                                    </span>
                                }
                            </p>

                            @if (!string.IsNullOrEmpty(Model.SubTipo))
                            {
                                <p><strong><i class="fas fa-tags me-2"></i>Subtipo:</strong> @Model.SubTipo</p>
                            }

                            @if (Model.FechaPublicacion.HasValue)
                            {
                                <p>
                                    <strong><i class="fas fa-calendar me-2"></i>Publicación:</strong>
                                    @Model.FechaPublicacion.Value.ToString("dd/MM/yyyy")
                                </p>
                            }
                        </div>
                    </div>
                </div>

                @if (Model.TipoLibro == "Fisico")
                {
                    <div class="availability-section mb-4">
                        <h5><i class="fas fa-info-circle me-2"></i>Disponibilidad</h5>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="availability-item">
                                    <span class="availability-number">@Model.CantidadTotal</span>
                                    <span class="availability-label">Total de Ejemplares</span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="availability-item">
                                    <span class="availability-number text-success">@Model.CantidadDisponible</span>
                                    <span class="availability-label">Disponibles</span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="availability-item">
                                    <span class="availability-number text-warning">@(Model.CantidadTotal - Model.CantidadDisponible)</span>
                                    <span class="availability-label">En Préstamo</span>
                                </div>
                            </div>
                        </div>

                        <div class="progress mt-3">
                            @{
                                var porcentajeDisponible = Model.CantidadTotal > 0 ? (Model.CantidadDisponible * 100.0 / Model.CantidadTotal) : 0;
                            }
                            <div class="progress-bar bg-success" role="progressbar"
                                 style="width: @(porcentajeDisponible)%"
                                 aria-valuenow="@porcentajeDisponible" aria-valuemin="0" aria-valuemax="100">
                                @porcentajeDisponible.ToString("F0")% Disponible
                            </div>
                        </div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.Descripcion))
                {
                    <div class="description-section">
                        <h5><i class="fas fa-align-left me-2"></i>Descripción</h5>
                        <div class="description-content">
                            <p>@Model.Descripcion</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Confirmación para solicitar préstamo
            $('form[asp-action="SolicitarPrestamo"]').on('submit', function(e) {
                if (!confirm('¿Está seguro de que desea solicitar el préstamo de "@Model.Titulo"?')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}

<style>
    .book-detail-image {
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

    .book-placeholder {
        padding: 3rem 0;
        background: linear-gradient(135deg, var(--secondary-color), #e9ecef);
        border-radius: 10px;
    }

    .book-detail-title {
        color: var(--primary-color);
        font-weight: bold;
        font-size: 2rem;
        margin-bottom: 1rem;
    }

    .book-detail-meta p {
        margin-bottom: 0.75rem;
        font-size: 1.1rem;
    }

    .availability-section {
        background: white;
        border-radius: 15px;
        padding: 1.5rem;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    }

    .availability-item {
        text-align: center;
        padding: 1rem;
    }

    .availability-number {
        display: block;
        font-size: 2rem;
        font-weight: bold;
        color: var(--primary-color);
    }

    .availability-label {
        display: block;
        font-size: 0.9rem;
        color: var(--text-color);
        margin-top: 0.5rem;
    }

    .description-section {
        background: white;
        border-radius: 15px;
        padding: 1.5rem;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    }

    .description-content {
        background: var(--secondary-color);
        border-radius: 10px;
        padding: 1.5rem;
        margin-top: 1rem;
    }
</style>